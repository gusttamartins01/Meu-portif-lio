/* Estilo para todos os h2 e h1 com efeito de flutuação */
h2, h1.efeito-flutuante {
    display: inline-block;
    padding: 10px 20px;
    background-color: #2c2c2c; /* Cor de fundo escura */
    border-radius: 10px; /* Bordas arredondadas */
    border: 3px solid #32CD32; /* Borda verde suave */
    color: #32CD32; /* Cor verde suave para o texto */
    animation: float 3s ease-in-out infinite; /* Animação de flutuação */
    text-align: center; /* Centralizando o texto */
    margin-bottom: 20px; /* Adiciona espaço entre o título e o conteúdo */
}

/* Animação para o efeito de flutuação */
@keyframes float {
    0% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-10px); /* Movimento de flutuação para cima */
    }
    100% {
        transform: translateY(0);
    }
}

/* Centralizando o conteúdo na página */
body {
    font-family: Arial, sans-serif;
    background-color: #121212;
    color: #e0e0e0;
    margin: 0;
    padding: 0;
    text-align: center; /* Centralizando o conteúdo */
}

/* Seção "Sobre mim" */
.sobre-mim {
    padding: 50px 10px;
}

.sobre-mim-content {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 30px; /* Espaço entre imagem e texto */
}

/* Reduzindo o tamanho da imagem e tornando-a proporcional */
.sobre-mim .minha-foto img {
    width: 450px; /* Ajuste a largura conforme necessário */
    height: 350px; /* A altura igual à largura para garantir a proporção */
    border-radius: 50%; /* Tornando a imagem circular */
    border: 5px solid #32CD32; /* Borda verde suave para a imagem */
    animation: float 3s ease-in-out infinite; /* Efeito de flutuação */
    margin-right: 30px; /* Espaço entre a imagem e o texto */
    float: left; /* Alinha a imagem à esquerda */
}

/* Ajustando o texto "Sobre mim" ao lado da foto */
.sobre-mim-texto {
    max-width: 500px; /* Limitando a largura do texto */
    text-align: left; /* Alinhar o texto à esquerda */
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 18px;
}

/* Habilidades em fileira (usando flexbox) */
.habilidades {
    display: flex; /* Usando flexbox para alinhar as imagens lado a lado */
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap; /* Permitir que as imagens se movam para a linha seguinte se necessário */
    margin-bottom: 30px;
}

.habilidades div {
    text-align: center;
}

.habilidades img {
    width: 80px;
    height: 80px;
    margin-bottom: 10px;
    border-radius: 50%;
    border: 5px solid #32CD32;
    transition: transform 0.3s ease-in-out; /* Adiciona transição suave */
}

.habilidades img:hover {
    transform: scale(1.2); /* Aumenta a imagem ao passar o mouse */
}

/* Projetos em fileira (usando flexbox) */
.projeto {
    display: flex; /* Usando flexbox para alinhar as imagens lado a lado */
